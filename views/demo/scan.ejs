<!DOCTYPE HTML>
<html>
    <head>
        <title>Scan - Star Module Demo</title>
        <% include partials/universal-dependencies/external-css.ejs %>
    </head>
    
    <body>
        <div class="container-fluid">
            <div class="row align-items-start no-gutters">

                <% include partials/navigation.ejs %>

                <div class="col-lg-9 col-md-9 scrollable">

                    <div class="row content-top">
                        <header id="page-heading">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active">Scan</li>
                            </ol>
                            <h3> <small><span class="glyphicon glyphicon-menu-left sidebar-toggle" aria-hidden="true" id="sidebar-open"></span></small> Scanner</h3>
                        </header>
                    </div>

                    <div class="row">
                        <video id="QR-Scanner"></video>
                        <audio id="audio">
                            <source src="/static/demo/sounds/Scan.mp3" type="audio/mpeg">
                        </audio>
                        <div class="card" id="scan-all">
                            <div class="card-header">
                                All Scans
                            </div>
                            <div class="card-body">
                                <table class="table table-sm" id="all-log">
                                    <thead>
                                        <tr>
                                            <th>Log ID</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row" id="scanner-tables">
                        <div class="card" id="scan-success">
                            <div class="card-header text-white bg-success">
                                Success
                            </div>
                            <div class="card-body">
                                <table class="table table-sm" id="">
                                    <thead>
                                        <tr>
                                            <th>Log ID</th>
                                            <th>Product</th>
                                            <th>Qty.</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card" id="scan-reject">
                            <div class="card-header text-white bg-danger">
                                Rejected
                            </div>
                            <div class="card-body">
                                <table class="table table-sm" id="">
                                    <thead>
                                        <tr>
                                            <th>Log ID</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
        <% include partials/universal-dependencies/external-js.ejs %>
        <script src="/static/demo/js/scanner.js"></script>
    </body>
</html>